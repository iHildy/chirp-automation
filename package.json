{
  "name": "chirp-ui-automation",
  "version": "0.1.0",
  "private": true,
  "description": "Self-hosted Chirp UI automation container with Android emulator and REST API",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "start": "node dist/server.js",
    "dev": "ts-node src/server.ts",
    "docker:build": "docker compose build",
    "docker:up": "docker compose up --build",
    "docker:up:mac": "ADB_CONNECT=host.docker.internal:5555 SKIP_EMULATOR_START=true docker compose up --build",
    "docker:down": "docker compose down",
    "docker:logs": "docker compose logs -f --tail=200",
    "docker:ps": "docker compose ps",
    "docker:restart": "docker compose restart",
    "docker:watch": "docker compose watch",
    "docker:watch:mac": "ADB_CONNECT=host.docker.internal:5555 SKIP_EMULATOR_START=true docker compose watch",
    "action": "bash ./scripts/trigger-action.sh",
    "action:gate": "bash ./scripts/trigger-action.sh tap_parking_garage_gate"
  },
  "dependencies": {
    "express": "^4.19.2",
    "fast-xml-parser": "^4.4.1",
    "js-yaml": "^4.1.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.11.17",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
